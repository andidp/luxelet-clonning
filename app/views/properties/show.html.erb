
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <div class="carousel-inner" role="listbox">
    <div class="item">
      <%= image_tag @property.property_image.url(:original) %>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="row">
  <div class="col-8 col-sm-8 blog-main">
    <div class="blog-post">
      <h2 class="blog-post-title"><%= @property.name %></h2>
      <p class="blog-post-meta"><%= @property.updated_at.strftime('%B %d, %Y') %> by <a href="#"><%= @property.user%></a></p>

      <p><%= @property.description.html_safe %></p>
    </div>
  </div>

  <div class="col-4">

    <div class="card" >

    <!-- Heading -->
    <div class="card-block">
      <h6 class="card-title">Price From </h3>
      <hr>
      <h3 class="card-subtitle text-muted">
        <%= "#{number_to_currency(@property.cost, unit: @property.currency, precision: 0)}" %>
      </h3>
      <span>per Night </span>
      <p>Including tax & service fees</p>
      <div class="form-group row">
        <div class="col-4">
          <input type="text" class="date datepicker form-control" placeholder="checkin">
        </div>
        <div class="col-4">
          <input type="text" class="date datepicker form-control" placeholder="checkout">
        </div>
        <div class="col-4">
          <input type="text" class="form-control" placeholder="guest">
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <button type="button" class="btn btn-primary">Booking</button>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-12">
          <strong>Inclusions:</strong>
          <span class="card-title">Breakfast, Housekeeping daily, Purified drinking water, Grocery shopping and butler service, 24x7 security guards, Welcome drink, cool towel, fruit basket upon arrival</span>
        </div>
      </div>
    </div>
  </div>

  </div>

</div>
